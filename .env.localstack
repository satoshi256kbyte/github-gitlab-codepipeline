# LocalStack Environment Configuration
# This file contains environment variables for LocalStack local development

# LocalStack Configuration
LOCALSTACK_ENDPOINT=http://localhost:4566
LOCALSTACK_API_KEY=

# AWS Configuration for LocalStack
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_DEFAULT_REGION=ap-northeast-1
AWS_ENDPOINT_URL=http://localhost:4566

# Environment Settings
ENVIRONMENT=local
STAGE_NAME=local

# Service Names for Local Testing
SERVICE_NAME=cicd-comparison

# LocalStack specific settings
LAMBDA_EXECUTOR=docker
LAMBDA_RUNTIME_ENVIRONMENT_TIMEOUT=60

# Skip real AWS services in local environment
SKIP_REAL_AWS_SERVICES=true
SKIP_CODEGURU_SECURITY=true
SKIP_INSPECTOR=true
SKIP_CODEQL=true
SKIP_GITLAB_SAST=true
SKIP_DEPENDABOT=true
SKIP_GITLAB_DEPENDENCY_SCANNING=true

# Local ports for testing
GITHUB_LOCAL_PORT=8080
GITLAB_LOCAL_PORT=8081
CODEPIPELINE_LOCAL_PORT=8082

# Docker network for LocalStack
DOCKER_NETWORK=localstack-network